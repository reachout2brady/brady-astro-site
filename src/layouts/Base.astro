---
import BaseHead from "../components/BaseHead.astro";
import type { Props as BaseHeadProps } from '../components/BaseHead.astro';

export interface Props {
  seo?: BaseHeadProps;
}

const { seo } = Astro.props;
---

<html lang="en">
  <head>
  <link rel="stylesheet" href="/src/styles/global.css" />
    <BaseHead {...seo} />
    <slot name="head-bottom" />
  </head>
  <body>
    <slot name="header" />

    <nav style="margin: 2rem 0;">
      <a href="/" style="margin-right: 1rem;">Home</a>
      <a href="/services" style="margin-right: 1rem;">Services</a>
      <a href="/about" style="margin-right: 1rem;">About</a>
      <a href="/portfolio" style="margin-right: 1rem;">Portfolio</a>
      <a href="/contact">Contact</a>
    </nav>

    <main>
      <slot />
    </main>

    <slot name="footer" />
  </body>
</html>
