---
import BaseHead from "../components/BaseHead.astro";
import type { Props as BaseHeadProps } from '../components/BaseHead.astro';

export interface Props {
  seo?: BaseHeadProps;
}

const { seo } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead {...seo} />
    <slot name="head-bottom" />
  </head>
  <body>
    <slot name="header" />

    <nav style="margin-bottom: 2rem;">
      <a href="/" style="margin-right: 1rem;">Home</a>
      <a href="/services" style="margin-right: 1rem;">Services</a>
      <a href="/about" style="margin-right: 1rem;">About</a>
      <a href="/portfolio">Portfolio</a>
<a href="/contact" style="margin-left: 1rem;">Schedule an Appointment</a>

    </nav>

    <main>
      <slot />
    </main>

    <slot name="footer" />
  </body>
</html>
