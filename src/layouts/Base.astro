---
import "../styles/global.css";
import BaseHead from "../components/BaseHead.astro";
import type { Props as BaseHeadProps } from '../components/BaseHead.astro';

export interface Props {
  seo?: BaseHeadProps;
}

const { seo } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead {...seo} />
    <slot name="head-bottom" />
  </head>
  <body class="font-sans">
    <slot name="header" />

    <nav class="my-8 text-center space-x-4">
      <a href="/" class="text-blue-600 hover:underline">Home</a>
      <a href="/services" class="text-blue-600 hover:underline">Services</a>
      <a href="/about" class="text-blue-600 hover:underline">About</a>
      <a href="/portfolio" class="text-blue-600 hover:underline">Portfolio</a>
      <a href="/contact" class="text-blue-600 hover:underline">Contact</a>
    </nav>

    <main class="max-w-4xl mx-auto px-4">
      <slot />
    </main>

    <slot name="footer" />
  </body>
</html>
